{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "main": "dist/bundle.js",
  "repository": "https://github.com/9oelM/typescript-boilerplate.git",
  "author": "Joel M <hj923@hotmail.com>",
  "scripts": {
    "start": "webpack && node dist/bundle.js",
    "watch": "run-p webpack:watch forever",
    "test": "jest",
    "lint": "npm run tslint && npm run prettier",
    "lint:config": "eslint --fix ./*.js",
    "prettier": "prettier --write 'src/**/*{.ts,.tsx}'",
    "tslint": "tslint --fix -c ./tslint.json 'src/**/*{.ts,.tsx}'",
    "webpack:watch": "webpack --watch",
    "forever": "forever --watch dist/bundle.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "@types/jest": "^24.0.15",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.2",
    "forever": "^1.0.0",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "tslint": "^5.18.0",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.5.3",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6"
  }
}
